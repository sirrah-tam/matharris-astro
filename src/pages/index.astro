---
import HomeLayout from "../layouts/HomeLayout.astro";
import config from "../static/data.json";
import "../styles/global.css";
// import { Image } from 'astro:assets';
// import backgroundUrl from '../static/images/intro-bg.jpg';
import {
	UserIcon,
	BookOpenIcon,
	CodeBracketIcon,
	ClipboardDocumentListIcon,
	ArrowTopRightOnSquareIcon,
} from "@heroicons/vue/24/solid";
---

<HomeLayout title="Welcome to Astro.">
	<main>
		<section class="intro p-14">
			<div class="container lg:max-w-4xl mx-auto">
				<!-- <Image src={backgroundUrl} alt="" class="bg-img"/> -->
				<h1 class="text-center text-6xl mb-14">
					Hi hello there, I'm Mat Harris
				</h1>
				<img
					src={config.config.info.gravatar}
					class="rounded-full mx-auto relative"
					alt="Mat Harris Profile Picture"
				/>
				<p class="mt-14 text-3xl text-center leading-loose">
					Web Accessibility Specialist, front-end dev, studied Poli Sci & Int
					Rel, anti-racist, midwest bred, DC based, <a
						href="http://pronoun.is/he"
						target="_blank"
						class="underline"
						>he/him <ArrowTopRightOnSquareIcon
							class="size-8 inline-block text-white align-text-top"
						/></a
					>
				</p>
			</div>
		</section>
		<section>
			<ul class="divide-y-4 divide-white border-y-4">
				<li class="bg-emerald-800 hover:bg-slate-700">
					<a href="/about" class="block p-14 text-4xl">
						<span class="flex container lg:max-w-4xl mx-auto">
							<UserIcon
								class="size-10 inline-block mr-4 align-text-top text-white"
							/>About
						</span>
					</a>
				</li>
				<li class="bg-teal-800 hover:bg-slate-700">
					<a href="/projects" class="block p-14 text-4xl">
						<span class="flex container lg:max-w-4xl mx-auto">
							<CodeBracketIcon
								class="size-10 inline-block align-text-top mr-4 text-white"
							/>Projects</span
						>
					</a>
				</li>
				<li class="bg-cyan-800 hover:bg-slate-700">
					<a href="/study" class="block p-14 text-4xl">
						<span class="flex container lg:max-w-4xl mx-auto">
							<BookOpenIcon
								class="size-10 inline-block mr-4 align-text-top text-white"
							/>Study</span
						></a
					>
				</li>
				<li class="bg-sky-800 hover:bg-slate-700">
					<a href="/resume" class="block p-14 text-4xl">
						<span class="flex container lg:max-w-4xl mx-auto">
							<ClipboardDocumentListIcon
								class="size-10 inline-block mr-4 align-text-top text-white"
							/>Resume</span
						>
					</a>
				</li>
			</ul>
		</section>
	</main>
</HomeLayout>

<style>
	.bg-img {
		position: absolute;
		top: -25%;
		left: 0;
		width: 100%;
	}
	.intro {
		background-color: #135;
	}

	.projects {
		background-color: #31708f;
	}

	.projects:hover {
		@apply bg-slate-700;
	}
</style>
