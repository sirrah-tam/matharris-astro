<style>
  @reference "../styles/global.css";
  a {
    @apply underline;
  }

  ul {
    @apply mb-10;
  }

  ul ul {
    @apply mb-2;
  }

  ol {
  margin-top: 2rem; /* Add space above the list */
  list-style: none; /* Remove default list style */
  counter-reset: item; /* Initialize a counter for numbering */
}

  ol > li {
    display: block; /* Ensure each list item occupies a block */
    position: relative; /* For positioning the pseudo-element */
    padding-left: 3em; /* Add space for the circle and number */
    font-weight: 700;
    font-size: 2rem;
  }

  ol > li:before {
    content: counter(item); /* Display the counter value */
    position: absolute; /* Position the pseudo-element */
    left: 0; /* Align to the left */
    top: 25px; /* Center vertically */
    width: 2em; /* Set the width of the circle */
    height: 2em; /* Set the height of the circle */
    background-color: #007bff; /* Set the background color */
    color: white; /* Set the text color */
    border-radius: 50%; /* Make it a circle */
    font-size: 2rem;
    text-align: center; /* Center the text */
    line-height: 2.1em; /* Center the text vertically */
    counter-increment: item; /* Increment the counter */
  }

  ul > li {
    font-weight: 400;
    font-size: 1.5rem;
  }

  @media screen and (max-width: 768px) {
  ol > li {
    font-size: 1.5rem; /* Adjust font size for smaller screens */
    padding-left: 0;
    padding-top: 3rem;
  }

  ol > li:before {
    font-size: 1.5rem; /* Adjust font size for smaller screens */
    top: -20px; /* Adjust position for smaller screens */
  }
  
}
</style>
