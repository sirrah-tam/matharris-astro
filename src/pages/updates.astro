---
import Layout from "../layouts/Layout.astro";
import { getCollection } from 'astro:content';
const updates = (await getCollection('updates')).sort(
  (a, b) =>  b.data.id - a.data.id,
)
---

<Layout title="Updates">
  <h1 class="text-center text-7xl mb-9">Updates</h1>

    {updates.map(update => (
      <hr class="my-4"/>
      <p>Date: {update.data.date}</p>
      <p>{update.data.content}</p>
    ))}
    <hr class="my-4"/>
</Layout>

<style>
  @reference "../styles/global.css";

  ul {
    @apply mb-10 list-disc list-inside;
  }

  ul ul {
    @apply mb-2;
  }
</style>
