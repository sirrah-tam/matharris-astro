---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Footer from '../components/Footer.vue';
import config from '../static/data.json'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mat Harris's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={title}> 
		<meta name="twitter:title" content={title}> 
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-white text-lg tracking-wide leading-loose">
		<slot />
		<Footer contact={config.config.info.contact}></Footer>
	</body>
</html>
