---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Footer from '../components/Footer.vue';
import data from '../static/data.json'
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- HTML Meta Tags -->
		<meta name="description" content="Mat Harris's personal website">
		<title>{title}</title>

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={Astro.url}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content="Mat Harris's personal website">
		<meta property="og:image" content="/images/social-banner.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="matharris.dev">
		<meta property="twitter:url" content={Astro.url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content="Mat Harris's personal website">
		<meta name="twitter:image" content="/images/social-banner.png">

	</head>
	<body class="bg-gray-900 text-white text-lg tracking-wide leading-loose">
		<slot />
		<Footer contact={data.info.contact}></Footer>
	</body>
</html>
