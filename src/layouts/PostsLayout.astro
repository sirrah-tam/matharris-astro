---
interface Props {
	title: string,
	author: string,
	date: string,
	description: string
}

const { title, author, description } = Astro.props;

import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
import data from '../static/data.json'
import "../styles/global.css";
import '@fontsource-variable/league-spartan';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Mat Harris</title>
		<meta name="description" content={description} />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={Astro.url}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content=`A blog post entitled "${title}" on Mat Harris's personal website`>
		<meta property="og:image" content="/images/social-banner.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="matharris.dev">
		<meta property="twitter:url" content={Astro.url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content=`A blog post entitled "${title}" on Mat Harris's personal website`>
		<meta name="twitter:image" content="/images/social-banner.png">
	</head>
	<body class="text-xl tracking-wide leading-loose">
		<a
			class="transition left-0 text-white absolute p-3 m-3 -translate-y-16 focus:translate-y-0"
			href="#main-content">Skip Navigation</a
		>
		<Header links={data.links} info={data.info}></Header>
		<main class="dark:bg-gray-900 dark:text-white" id="main-content">
			<section class="container lg:max-w-4xl mx-auto py-14 px-4 lg:px-0">
				<a href="/posts" class="block text-xl mb-9">&lt; Back to all posts</a>
				<h1 class="text-center text-7xl mb-9">{title}</h1>
				{author && <p>By: {author}</p>}
				<slot />
			</section>
		</main>
		<Footer contact={data.info.contact}></Footer>
	</body>
</html>

