---
interface Props {
	title: string,
	author: string,
	date: string
}

const { title, author } = Astro.props;

import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
import data from '../static/data.json'
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content=`A blog post entitled "${title}" on Mat Harris's personal website` />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Mat Harris</title>
	</head>
	<body class="text-xl tracking-wide leading-loose">
		<Header links={data.links} info={data.info}></Header>
		<main class="dark:bg-gray-900 dark:text-white">
			<section class="container lg:max-w-4xl mx-auto py-14 px-4 lg:px-0">
				<a href="/posts" class="block text-xl mb-9">&lt; Back to all posts</a>
				<h1 class="text-center text-7xl mb-9">{title}</h1>
				{author && <p>By: {author}</p>}
				<slot />
			</section>
		</main>
		<Footer contact={data.info.contact}></Footer>
	</body>
</html>

