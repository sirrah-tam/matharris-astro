---
interface Props {
	title: string;
}

const { title } = Astro.props;

import data from '../static/data.json'
import "../styles/global.css";
import '@fontsource-variable/league-spartan';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- HTML Meta Tags -->
		<title>{title} | Mat Harris</title>
		<meta name="description" content=`The ${title} page on Mat Harris's personal website` />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={Astro.url}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content=`The ${title} page on Mat Harris's personal website`>
		<meta property="og:image" content="/images/social-banner.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="matharris.dev">
		<meta property="twitter:url" content={Astro.url}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content=`The ${title} page on Mat Harris's personal website`>
		<meta name="twitter:image" content="/images/social-banner.png">
	</head>
	<body class="dark:bg-gray-900 dark:text-white text-xl tracking-wide leading-loose">
		<main class="py-20">
			<section class="container lg:max-w-4xl mx-auto py-5 lg:py-14 px-4 lg:px-0">
				<slot />
			</section>
		</main>
	</body>
</html>
