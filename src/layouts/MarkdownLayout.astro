---
const { frontmatter } = Astro.props;

import data from '../static/data.json'
import Header from '../components/Header.vue';
import Footer from '../components/Footer.vue';
import Prose from '../components/Prose.astro';
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- HTML Meta Tags -->
		<title>{frontmatter.title} | Mat Harris</title>
		<meta name="description" content=`The ${frontmatter.title} page on Mat Harris's personal website` />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={Astro.url}>
		<meta property="og:type" content="website">
		<meta property="og:title" content={frontmatter.title}>
		<meta property="og:description" content=`The ${frontmatter.title} page on Mat Harris's personal website`>
		<meta property="og:image" content="/images/social-banner.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="matharris.dev">
		<meta property="twitter:url" content={Astro.url}>
		<meta name="twitter:title" content={frontmatter.title}>
		<meta name="twitter:description" content=`The ${frontmatter.title} page on Mat Harris's personal website`>
		<meta name="twitter:image" content="/images/social-banner.png">
	</head>
	<body class="text-xl tracking-wide leading-loose">
		<Header links={data.links} info={data.info}></Header>
		<main class="dark:bg-gray-900 dark:text-white">
			<section class="container lg:max-w-4xl mx-auto py-14 px-4 lg:px-0">
				<h1 class="text-center text-7xl mb-9">{frontmatter.title}</h1>
        {frontmatter.author && <p>By: {frontmatter.author}</p>}
        <Prose>
          <slot />
        </Prose>
			</section>
		</main>
		<Footer contact={data.info.contact}></Footer>
	</body>
</html>

